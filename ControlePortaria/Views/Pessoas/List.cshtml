@model IEnumerable<Pessoa>

<!DOCTYPE html>


    <div class="container">
        <form asp-controller="Pessoas" asp-action="Create" method="get">
            <button class="btn btn-primary mb-2"type="submit">Criar pessoa</button>
        </form>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PessoaNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PessoaTelefone)
                </th>
                 <th class="col-1">
                    @Html.DisplayNameFor(model => model.PessoaStatus)
                </th>
                <th class="col-2">

                </th>
            </tr>

            @foreach (var pessoa in Model)
            {
                <tr>

                    <td>
                        @pessoa.PessoaNome
                    </td>
                    <td>
                        @pessoa.PessoaTelefone
                    </td>
                         <td>
                        @pessoa.PessoaStatus.GetDescription()
                        </td>
                    <td>
                        <div class="d-flex gap-3">
                            <form asp-controller="Pessoas" asp-action="Edit" method="get" asp-route-id="@pessoa.PessoaId">
                                <button type="submit" class="btn btn-secondary">Editar</button>
                            </form>
                            <form asp-controller="Pessoas" asp-action="InativarPessoa" method="post">
                                <input type="hidden" name="id" value="@pessoa.PessoaId" />
                                <button type="submit" class="btn btn-secondary">Inativar</button>
                            </form>
                        </div>

                    </td>
                </tr>
            }


        </table>
    </div>

