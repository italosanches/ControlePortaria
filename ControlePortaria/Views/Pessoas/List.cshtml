@model IEnumerable<ControlePortaria.Models.Pessoa>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pessoas</title>
</head>
<body>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PessoaTelefone)
            </th>
            <th>

            </th>
        </tr>
        
        @foreach(var pessoa in Model)
        {
            <tr>
              
                <td >
                    @pessoa.PessoaNome
                </td>
                <td >
                    @pessoa.PessoaTelefone
                </td>
                <td>
                      <form asp-controller="Pessoas" asp-action="Edit" method="get">
                                <input type="hidden" name="id" value="@pessoa.PessoaId" />
                                <button type="submit">Editar</button>
                       </form>
                 </td>
             </tr>
        }
        

    </table>
   
</body>
</html>
