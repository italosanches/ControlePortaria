@model Carro;
@{
    var dictionaryFabricante = EnumExtensions.ToDictionary<Fabricante>() as Dictionary<int, string>;
}

<h4>Carro</h4>
<div class="row mt-5">
    <div class="col-12">
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        @if (ViewData["PlacaDuplicada"] != null)
        {
                <div class="alert alert-danger">
                @ViewData["PlacaDuplicada"]
                </div>
        }
        <form asp-action="@ViewBag.Modo" asp-controller="Carros" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="CarroId" />
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="CarroPlaca" class="control-label"></label>
                        <input asp-for="CarroPlaca" class="form-control" />
                        <span asp-validation-for="CarroPlaca" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="CarroModelo" class="control-label"></label>
                        <input asp-for="CarroModelo" class="form-control" />
                        <span asp-validation-for="CarroModelo" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-2">
                    <div class="form-group">
                        <label asp-for="Fabricante" class="control-label"></label>
                        <select asp-for="Fabricante" class="form-select"
                                asp-items="@(new SelectList(dictionaryFabricante, "Key", "Value"))">
                        </select>
                        <span asp-validation-for="Fabricante" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="CarroKilometragem" class="control-label"></label>
                       <input asp-for="CarroKilometragem" class="form-control" />
                        <span asp-validation-for="CarroKilometragem" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <button asp-action="List" class="btn btn-primary">Voltar</button>
            </div>
        </form>
    </div>
</div>
