@model Pessoa
@{
    var dictionaryStatus = EnumExtensions.ToDictionary<PessoaStatus>() as Dictionary<int,string>;
    // var dictionaryStatus = ViewBag.DictionaryStatus as Dictionary<int, string>;
}
<h4>Pessoa</h4>
<div class="row mt-5">
    <div class="col-12">
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        <form asp-action="@ViewBag.Modo" asp-controller="Pessoas" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="PessoaId" />
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="PessoaNome" class="control-label"></label>
                        <input asp-for="PessoaNome" class="form-control" />
                        <span asp-validation-for="PessoaNome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="PessoaTelefone" class="control-label"></label>
                        <input asp-for="PessoaTelefone" class="form-control" />
                        <span asp-validation-for="PessoaTelefone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="PessoaStatus" class="control-label"></label>
                        <select asp-for="PessoaStatus" class="form-select" 
                            asp-items="@(new SelectList(dictionaryStatus, "Key", "Value"))">
                        </select>
                        <span asp-validation-for="PessoaStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <button asp-action="List" class="btn btn-primary">Voltar</button>
            </div>
        </form>
    </div>
</div>
